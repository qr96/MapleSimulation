<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="아이템을 강화합니다."
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/equipment_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:src="@drawable/mongbel" />
        <TextView
            android:id="@+id/equipment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="장비를 추가해주세요."/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginHorizontal="20dp">
            <TextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STR : +69(0 +69)"
                android:textSize="20sp"/>
        </ScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/scroll_button_0"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:onClick="select"
                        android:src="@drawable/scroll_basic_15"/>
                    <ImageView
                        android:id="@+id/scroll_check_0"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:padding="15dp"
                        android:scaleType="fitCenter"
                        android:visibility="invisible"
                        android:src="@drawable/ui_checked"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/scroll_button_1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:onClick="select"
                        android:src="@drawable/scroll_basic_30"/>
                    <ImageView
                        android:id="@+id/scroll_check_1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:padding="15dp"
                        android:scaleType="fitCenter"
                        android:visibility="invisible"
                        android:src="@drawable/ui_checked"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/scroll_button_2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:onClick="select"
                        android:src="@drawable/cube_black"/>
                    <ImageView
                        android:id="@+id/scroll_check_2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:padding="15dp"
                        android:scaleType="fitCenter"
                        android:visibility="invisible"
                        android:src="@drawable/ui_checked"/>
                </FrameLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:onClick="runEnhance"
            android:text="강화하기"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="뒤로가기"
            android:onClick="goBack"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
