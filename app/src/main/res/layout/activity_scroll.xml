<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="아이템을 강화합니다."
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:src="@drawable/mongbel" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STR : +69(0 +69)"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEX : +15(0 +15)"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INT : +83(20 +63)"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STR : +93(20 +45 +25)"
            android:textSize="20sp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/cube_black"/>
                    <ImageView
                        android:id="@+id/scroll0"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:padding="15dp"
                        android:scaleType="fitCenter"
                        android:visibility="invisible"
                        android:src="@drawable/ui_checked"/>
                </FrameLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="강화하기"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="뒤로가기"
            android:onClick="goBack"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>